<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!--old theme: Theme.AppCompat.Light.DarkActionBa-->
        <item name="android:icon">@drawable/ic_microreport</item>
        <!--makes the action bar hideable-->
        <item name="android:windowActionBarOverlay">true</item>
        <!--style action bar-->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!--background of selected list item-->
        <item name="android:activatedBackgroundIndicator">@drawable/listitem_background</item>
        <!--white overflow buttons and back menu-->
        <item name="android:actionOverflowButtonStyle">@style/MyOverFlowButton</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_back_holo_dark_am</item>
    </style>
    <!-- ActionBar styles (black action bar) -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#191919</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>
    <style name="MyOverFlowButton" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:src">@drawable/ic_action_overflow_white</item>
    </style>
   <!-- ActionBar title text (white) -->
    <style name="MyActionBarTitleText" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>
