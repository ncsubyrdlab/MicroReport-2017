<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/report">
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="?android:attr/actionBarSize"
    tools:context="edu.ucsc.psyc_files.microreport.ReportActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/reporthead"
            android:text="@string/reporthead"
            android:contentDescription="@string/reporthead"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            style="@android:style/TextAppearance.Large"/>
        <TextView
            android:id="@+id/happenedhead"
            android:text="@string/happenedto"
            android:contentDescription="@string/happenedto"
            android:layout_below="@id/reporthead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            style="@android:style/TextAppearance.Medium"/>
        <CheckBox
            android:id="@+id/radio_you"
            android:text="@string/happenedtoyou"
            android:contentDescription="@string/happenedtoyou"
            android:layout_below="@id/reporthead"
            android:layout_toRightOf="@id/happenedhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            style="@android:style/TextAppearance.Medium"/>
        <CheckBox
            android:id="@+id/radio_else"
            android:text="@string/happenedtoelse"
            android:contentDescription="@string/happenedtoelse"
            android:layout_below="@id/reporthead"
            android:layout_toRightOf="@id/radio_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            style="@android:style/TextAppearance.Medium"/>
        <TextView
            android:id="@+id/whenhead"
            android:text="@string/when"
            android:contentDescription="@string/when"
            android:layout_below="@id/radio_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            style="@android:style/TextAppearance.Medium"/>
        <CheckBox
            android:id="@+id/nowcheckbox"
            android:checked="true"
            android:text="@string/justnow"
            android:contentDescription="@string/justnow"
            android:layout_below="@id/radio_you"
            android:layout_toRightOf="@id/whenhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            style="@android:style/TextAppearance.Medium"/>
        <EditText
            android:id="@+id/othertime"
            android:hint="@string/othertime"
            android:contentDescription="@string/othertime"
            android:layout_below="@id/radio_you"
            android:layout_toRightOf="@id/nowcheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/classhead"
            android:text="@string/whatclass"
            android:contentDescription="@string/whatclass"
            android:layout_below="@id/othertime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            style="@android:style/TextAppearance.Medium"/>
        <EditText android:id="@+id/classdescription"
            android:layout_below="@id/othertime"
            android:layout_toRightOf="@id/classhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/descriptionhead"
            android:text="@string/whathappened"
            android:contentDescription="@string/whathappened"
            android:layout_below="@id/classhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            style="@android:style/TextAppearance.Medium"/>
        <EditText android:id="@+id/description"
            android:hint="@string/describehint"
            android:contentDescription="@string/describehint"
            android:layout_below="@id/descriptionhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textCapSentences|textAutoCorrect"/>
        <TextView
            android:id="@+id/locationhead"
            android:text="@string/location"
            android:contentDescription="@string/location"
            android:layout_below="@id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Medium"/>
        <CheckBox
            android:id="@+id/currentlocationcheckbox"
            android:checked="false"
            android:layout_below="@id/locationhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="useCurrentLocation"/>
        <TextView
            android:id="@+id/currentlocationtext"
            android:text="@string/usecurrentlocation"
            android:contentDescription="@string/usecurrentlocation"
            android:layout_toRightOf="@id/currentlocationcheckbox"
            android:layout_below="@id/locationhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.Medium"/>
        <Button
            android:id="@+id/pick_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick a Place"
            android:contentDescription="Pick a Place"
            android:onClick="pickPlace"
            />
        <Spinner
            android:id="@+id/location_spinner"
            android:entries="@array/buildingsarray"
            android:layout_below="@id/currentlocationcheckbox"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>
        <EditText android:id="@+id/locationtextbox"
            android:hint="@string/otherlocation"
            android:contentDescription="@string/otherlocation"
            android:layout_below="@id/location_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_height="300dp"
            android:layout_width="match_parent"/>
        <Button
            android:id="@+id/openpopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_preview"
            android:contentDescription="@string/button_preview"
            android:onClick="submitReport"
            />
    </LinearLayout>
</LinearLayout>
</ScrollView>